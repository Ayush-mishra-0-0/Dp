{
    "manifest_version": 2,
    
    "name": "Insite",
    "version": "1.0",
    "description": "Recognize dark patterns in online stores",
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],

    "browser_action": {
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/common.js",
                "js/block_segment.js",
                "js/content.js"
            ]
        }
    ]
}